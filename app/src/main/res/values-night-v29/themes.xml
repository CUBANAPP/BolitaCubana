<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BolitaCubana" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary20</item>
        <item name="android:textColorPrimary">@color/material_dynamic_primary90</item>
        <item name="textColorAlertDialogListItem">@color/material_dynamic_primary90</item>

        <item name="colorPrimaryVariant">@color/material_dynamic_primary60</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary90</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_primary50</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_primary40</item>
        <item name="colorOnSecondary">@color/material_dynamic_primary100</item>

        <item name="elevationOverlayColor">@color/red_500</item>
        <item name="colorPrimaryInverse">@color/light_blue</item>

        <item name="android:textColorHighlight">@color/material_dynamic_primary90</item>
        <item name="android:textColorHighlightInverse">@color/material_dynamic_primary10</item>

        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.BolitaCubana.Full" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary20</item>
        <item name="android:textColorPrimary">@color/material_dynamic_primary90</item>
        <item name="textColorAlertDialogListItem">@color/material_dynamic_primary90</item>

        <item name="colorPrimaryVariant">@color/material_dynamic_primary60</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary90</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_primary50</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_primary40</item>
        <item name="colorOnSecondary">@color/material_dynamic_primary100</item>

        <item name="elevationOverlayColor">@color/red_500</item>
        <item name="colorPrimaryInverse">@color/light_blue</item>

        <item name="android:textColorHighlight">@color/material_dynamic_primary90</item>
        <item name="android:textColorHighlightInverse">@color/material_dynamic_primary10</item>

        <!-- Transparent system bars for edge-to-edge. -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <!-- Customize your theme here. -->
    </style>
</resources>
