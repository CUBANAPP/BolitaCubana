<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BolitaCubana" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary40</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary20</item>
        <item name="colorOnPrimary">@color/material_dynamic_primary100</item>
        <item name="android:textColorPrimary">@color/material_dynamic_primary10</item>
        <item name="textColorAlertDialogListItem">@color/material_dynamic_primary10</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_dynamic_primary80</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_primary60</item>
        <item name="colorOnSecondary">@color/material_dynamic_primary10</item>

        <item name="colorTertiary">@color/material_dynamic_neutral50</item>
        <item name="colorTertiaryContainer">@color/material_dynamic_neutral50</item>

        <item name="elevationOverlayColor">@color/light_blue</item>
        <item name="colorPrimaryInverse">@color/red_500</item>

        <item name="android:textColorHighlight">@color/material_dynamic_primary10</item>
        <item name="android:textColorHighlightInverse">@color/material_dynamic_primary90</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>
    <style name="Theme.BolitaCubana.Full" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_primary40</item>
