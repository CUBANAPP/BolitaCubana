<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <PreferenceCategory app:title="@string/apptitle">
        <ListPreference
            app:key="languagepreference"
            app:title="@string/languageselector"
            app:defaultValue="es"
            app:entries="@array/Language"
            app:entryValues="@array/languageAlias"/>
        <ListPreference
            app:key="thememodeselector"
            app:title="@string/darkmode"
            app:defaultValue="system"
            app:entries="@array/thememodes"
            app:entryValues="@array/themekey"/>
        <ListPreference
            app:key="erase"
            app:title="@string/erase"
            app:defaultValue="0"
            app:entries="@array/delete"
            app:entryValues="@array/deletea"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/notification">
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="floridaChannel"
            app:summaryOff="@string/notification_disabled"
            app:summaryOn="@string/notification_enabled"
            app:title="@string/notificaciontitle" />
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="georgiaChannel"
            app:summaryOff="@string/notification_disabled"
            app:summaryOn="@string/notification1_enabled"
            app:title="@string/notificaciontitle1" />
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="newyorkChannel"
            app:summaryOff="@string/notification_disabled"
            app:summaryOn="@string/notification2_enabled"
            app:title="@string/notificaciontitle2" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/promotional_topic"
            app:summaryOff="@string/promotional_disabled"
            app:summaryOn="@string/notificacionpromotional"
            app:title="@string/promotional" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/cubanapp_channel_name_topic"
            app:summaryOff="@string/promotional_disabled"
            app:summaryOn="@string/cubanapp_channel_name_enabled"
            app:title="@string/cubanapp_channel_name" />
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="delegation"
            app:title="@string/messageDelegation" />
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="exportMetrics"
            app:title="@string/exportBigQuery" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/firebase">
        <SwitchPreferenceCompat
            app:key="dataCollection"
            app:defaultValue="true"
            app:summaryOff="@string/data_disabled"
            app:summaryOn="@string/data_enabled"
            app:title="@string/firebaseData" />
        <SwitchPreferenceCompat
            app:dependency="dataCollection"
            app:defaultValue="true"
            app:key="analytics"
            app:title="@string/analytics" />
        <SwitchPreferenceCompat
            app:dependency="dataCollection"
            app:defaultValue="false"
            app:key="resourceManagement"
            app:title="@string/resourceManagement" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/adstitle">
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="allowAdsPerso"
            app:title="@string/adspersonal" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/errorInformes">
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="crashlytics"
            app:title="@string/crashlytic" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/performance">
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="performance"
            app:title="@string/firebaseperf" />
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="copyID"
            app:summaryOff="@string/copyidsummary"
            app:summaryOn="@string/copyidsummaryon"
            app:title="@string/copyid" />
    </PreferenceCategory>
</PreferenceScreen>
